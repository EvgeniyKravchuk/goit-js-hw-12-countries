{{#each this}}
  <div>
    <h1 class='country-name'>{{name}}</h1>
    <li class='finded-country-list-item'>Capital: {{capital}}</li>
    <li class='finded-country-list-item'>Population: {{population}}</li>
    <li class='finded-country-list-item'>Languages:
      <ul class='finded-country-languages-list'>
        {{#each languages}}
          <li class='country-language'>{{this.name}}</li>
        {{/each}}
      </ul>
    </li>
  </div>

  <img class='country-flag' src={{flag}} alt={{name}} flag />
{{/each}}